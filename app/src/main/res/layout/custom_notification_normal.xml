<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_collapsed_notification"
        style="@style/TextAppearance.Compat.Notification.Title"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_notification_info"
        style="@style/TextAppearance.Compat.Notification.Info"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/champagne"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:contentDescription="@string/label_image"
        />

    <Button
        android:id="@+id/snooze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/stop_pressable"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/label_snooze"
        />

</LinearLayout>
